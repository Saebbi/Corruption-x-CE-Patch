<?xml version="1.0" encoding="utf-8" ?>

<Patch>
  
   <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/PawnKindDef[defName="SororitasNurse"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>3</min>
          <max>5</max>
        </primaryMagazineCount>
      </li>
    </value>
  </Operation>
  
  <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/PawnKindDef[defName="SororitasBattleSister"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>4</min>
          <max>5</max>
        </primaryMagazineCount>
        <forcedSidearm>
          <sidearmMoney>
            <min>1200</min>
            <max>3000</max>
          </sidearmMoney>
          <weaponTags>
            <li>Sororitas_Melee</li>
          </weaponTags>
          <magazineCount>
            <min>4</min>
            <max>5</max>
          </magazineCount>
        </forcedSidearm>
