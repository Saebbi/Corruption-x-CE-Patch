<?xml version="1.0" encoding="utf-8" ?>

<Patch>
  
   <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/PawnKindDef[defName="CSM_Assault"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>3</min>
          <max>5</max>
        </primaryMagazineCount>
      </li>
    </value>
  </Operation>
  
  <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/PawnKindDef[defName="CSM_Tactical"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>3</min>
          <max>5</max>
        </primaryMagazineCount>
      </li>
    </value>
  </Operation>
  
  <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/PawnKindDef[defName="CSM_Heavy"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>4</min>
          <max>5</max>
        </primaryMagazineCount>
      </li>
    </value>
  </Operation>
  
  <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/PawnKindDef[defName="CSM_Captain"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>3</min>
          <max>5</max>
        </primaryMagazineCount>
        <forcedSidearm>
          <sidearmMoney>
            <min>1000</min>
            <max>2500</max>
          </sidearmMoney>
          <weaponTags>
            <li>Astartes_Melee</li>
          </weaponTags>
          <magazineCount>
            <min>3</min>
            <max>5</max>
          </magazineCount>
        </forcedSidearm>
      </li>
    </value>
  </Operation>
  
</Patch>