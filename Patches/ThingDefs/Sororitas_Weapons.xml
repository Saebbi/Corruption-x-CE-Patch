<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName="Sororitas_Chainsword"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>blade</label>
					<capacities>
						<li>Cut</li>
					</capacities>
					<power>28</power>
					<cooldownTime>1.5</cooldownTime>
					<armorPenetration>0.6</armorPenetration>
					<linkedBodyPartsGroup>Blade</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Sororitas_Chainsword"]/statBases</xpath>
		<value>
      		<Bulk>4</Bulk>
      		<MeleeCounterParryBonus>1.125</MeleeCounterParryBonus>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Sororitas_Chainsword"]</xpath>
		<value>
			<equippedStatOffsets>
				<MeleeCritChance>0.5</MeleeCritChance>
				<MeleeParryChance>0.4</MeleeParryChance>
			</equippedStatOffsets>
		</value>
	</Operation>

	<!-- Add tags -->

	<Operation Class="PatchOperationSequence">
  	<success>Always</success>
  	<operations>
    	<li Class="PatchOperationTest">
      	<xpath>*/ThingDef[defName="Sororitas_Chainsword"]/weaponTags</xpath>
      	<success>Invert</success>
    	</li>
    	<li Class="PatchOperationAdd">
      	<xpath>*/ThingDef[defName="Sororitas_Chainsword"]</xpath>
      	<value>
        	<weaponTags />
      	</value>
    	</li>
  	</operations>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Sororitas_Chainsword"]/weaponTags</xpath>
		<value>
			<li>Sororitas_Melee</li>
		</value>
	</Operation>

